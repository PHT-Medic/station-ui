{
    "include": ["**/*"],
    "compilerOptions": {
        "sourceMap": true,

        "declaration": true,
        "declarationMap": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "noEmitOnError": true,

        "skipLibCheck": true,

        "esModuleInterop": true,
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "Node",
        "module": "CommonJS"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}

